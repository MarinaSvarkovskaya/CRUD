{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form__title"> Інформація про товар</h1>
      <form method="POST" action="/product-edit">
        <div class="form__content">
          {{#with data}}
          <div class="form__field">
            <label for="name" class="form__label"> Назва товару:</label>
            <input type="name" name="name" class="form__input" placeholder="{{name}}">
          </div>
          <div class="form__field">
            <label for="price" class="form__label"> Ціна:</label>
            <input type="price" name="price" class="form__input" placeholder="{{price}}">
          </div>
          <div class="form__field">
            <label for="id" class="form__label"> ID:</label>
            <input type="id" name="id" class="form__input" placeholder="{{id}}">
          </div>
          <div class="form__field">
            <label for="description" class="form__label"> Короткий опис товару:</label>
            <input type="description" name="description" class="form__input" placeholder="{{description}}">
          </div>

          <button class="form__button"> Зберегти оновлення </button>
          <a href="/product-edit?id={{id}}" class="form__button_delete"> Видалити товар </a>
        </div>
        {{/with}}
      </form>
    </div>
  </section>
</main>



