{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<section class="form">
  <h1 class="form__title"> Список товарів </h1>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      {{#with data.products }}
      {{#if isEmpty}}
      <mark> Пустий</mark>
      {{else}}
      {{#each list}}
      <h4 class="card-title"> {{name}}</h4>
      <p class="card-text"> {{description}}</p>
      <p class="card-secondtext"> ID: {{id}}</p>
      <h5 class="card-title">{{price}}</h5>
      <a href="/product-edit?id={{id}}" class="card-link">Редагувати</a>
      {{/each}}
      {{/if}}
      {{/with}}
    </div>
  </div>
</section>
