<main class="main">
  {{#with data}}
  <div class="main__content">
    <h1 class="title title--center"> {{name}}</h1>

    <a href="/spotify-track-add?playlistId={{playlistId}}&trackId={{id}}" class="add-button">
      <img width="40" height="40" src="/svg/add_button.svg"> Додати до плейліста
    </a>

    <ul class="track-list">
      {{#each tracks}}
      <li class="track">
        <img src="{{image}}">

        <div class="track__content">
          <strong class="track__name">{{name}}</strong>
          <em class="track__author">{{author}}</em>
        </div>

        <a href="/spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}">
          <img src="/svg/delete_button.svg">
        </a>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/with}}
</main>